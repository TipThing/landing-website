---
import SpotlightCard from '../ui/SpotlightCard';
import { WebAppVisual } from '../interactive';
import {
  CloudTopologyVisual,
  UniversalPlatformVisual,
  TechStackVisual,
  SignalPulseVisual,
  MigrationVisual
} from '../interactive/AdvancedVisuals';
import { Code } from 'lucide-react';
---

<div class="grid grid-cols-1 md:grid-cols-12 gap-4 auto-rows-[180px]">
    <!-- Large Feature 1: Bespoke Engineering (Span 8, Row 2) -->
    <SpotlightCard className="md:col-span-8 md:row-span-2 bg-zinc-900/40 p-0 flex flex-col justify-between group overflow-hidden" client:load>
         <div class="absolute inset-0 opacity-50">
            <WebAppVisual client:load />
        </div>
        <div class="absolute inset-0 bg-gradient-to-t from-zinc-950 via-zinc-950/80 to-transparent z-10 pointer-events-none"></div>
        <div class="relative z-20 p-8 h-full flex flex-col justify-end">
            <div class="w-10 h-10 rounded-lg bg-zinc-800/50 border border-white/10 flex items-center justify-center mb-4 text-zinc-400"><Code size={20} /></div>
            <h3 class="text-2xl font-bold text-white mb-2">Bespoke Engineering</h3>
            <p class="text-zinc-500 text-sm max-w-md leading-relaxed">We don't use templates. We architect custom software platforms tailored to your specific operational constraints and business goals.</p>
        </div>
    </SpotlightCard>

    <!-- Small Feature: Cloud Arch (Span 4, Row 1) -->
    <SpotlightCard className="md:col-span-4 md:row-span-1 p-0 flex flex-col justify-between bg-zinc-900/30 group hover:bg-zinc-900/50 transition-colors overflow-hidden relative" client:load>
        <div class="flex flex-col h-full justify-between">
            <div class="absolute inset-0 opacity-50">
                <CloudTopologyVisual client:load />
            </div>
            <div class="absolute inset-0 bg-gradient-to-t from-zinc-950/90 to-transparent z-10"></div>
            <div class="relative z-20 p-6 mt-auto">
                 <h4 class="text-sm font-bold text-zinc-200">Cloud Architecture</h4>
                 <p class="text-xs text-zinc-500 mt-1">Scalable AWS & Azure systems.</p>
            </div>
        </div>
    </SpotlightCard>

    <!-- Small Feature: Mobile (Span 4, Row 1) -->
    <SpotlightCard className="md:col-span-4 md:row-span-1 p-0 flex flex-col bg-zinc-900/30 relative overflow-hidden group" client:load>
        <div class="flex flex-col h-full justify-between">
            <div class="absolute inset-0 opacity-50">
                <UniversalPlatformVisual client:load />
            </div>
            <div class="absolute inset-0 bg-gradient-to-t from-zinc-950/90 to-transparent z-10"></div>
            <div class="relative z-20 p-6 mt-auto">
                <h3 class="text-sm font-bold text-zinc-200 mb-0.5">Mobile Ecosystems</h3>
                <p class="text-zinc-500 text-xs">Native & Cross-platform apps.</p>
            </div>
        </div>
    </SpotlightCard>

    <!-- Medium Feature: Tech Stack (Span 4, Row 1) - FIXED CONTENT SPACING -->
    <SpotlightCard className="md:col-span-4 md:row-span-1 p-0 flex flex-col bg-zinc-900/30 relative overflow-hidden group" client:load>
        <div class="flex flex-col h-full">
            <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_top_right,_var(--tw-gradient-stops))] from-zinc-800/20 via-zinc-950/80 to-zinc-950 z-0 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
            <div class="relative z-10 flex-1 flex items-center justify-center min-h-0 py-2">
                <TechStackVisual client:load />
            </div>
            <div class="relative z-10 px-6 py-3 border-t border-white/5 bg-zinc-950/30 backdrop-blur-sm mt-auto">
                <h3 class="text-xs font-bold text-zinc-300 mb-0.5">Modern Stack</h3>
                <p class="text-zinc-600 text-[10px]">Next.js, Rust, and Go.</p>
            </div>
        </div>
    </SpotlightCard>

    <!-- Improved Feature: IoT Connectivity (Span 4, Row 1) -->
    <SpotlightCard className="md:col-span-4 md:row-span-1 p-0 flex flex-col bg-zinc-900/30 relative overflow-hidden group" client:load>
        <div class="flex flex-col h-full justify-between">
            <div class="absolute inset-0 opacity-60">
                <SignalPulseVisual client:load />
            </div>
            <div class="absolute inset-0 bg-gradient-to-t from-zinc-950/90 to-transparent z-10"></div>
            <div class="relative z-20 p-6 mt-auto">
                <h3 class="text-sm font-bold text-zinc-200 mb-0.5">IoT Connectivity</h3>
                <p class="text-zinc-500 text-xs">Real-time device mesh.</p>
            </div>
        </div>
    </SpotlightCard>

    <!-- Improved Feature: Digital Transformation (Span 4, Row 1) -->
    <SpotlightCard className="md:col-span-4 md:row-span-1 p-0 flex flex-col bg-zinc-900/30 relative overflow-hidden group" client:load>
        <div class="flex flex-col h-full justify-between">
            <div class="absolute inset-0 opacity-60">
                 <MigrationVisual client:load />
            </div>
            <div class="absolute inset-0 bg-gradient-to-t from-zinc-950/90 to-transparent z-10"></div>
            <div class="relative z-20 p-6 mt-auto">
                 <h3 class="text-sm font-bold text-white mb-1">Digital Transformation</h3>
                 <p class="text-zinc-500 text-xs leading-relaxed">Migrating legacy monoliths.</p>
             </div>
        </div>
    </SpotlightCard>
</div>
