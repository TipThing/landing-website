---
interface Props {
  eyebrow: string;
  title: string;
  description: string;
}

const { eyebrow, title, description } = Astro.props;
---

<div class="relative min-h-[60vh] flex flex-col justify-center px-6 bg-[#09090b] pt-20">
    <div class="absolute inset-0 bg-[linear-gradient(to_right,#8080800a_1px,transparent_1px),linear-gradient(to_bottom,#8080800a_1px,transparent_1px)] bg-[size:24px_24px] pointer-events-none"></div>
    <div class="absolute inset-0 bg-gradient-to-b from-zinc-900/0 via-zinc-900/0 to-[#09090b] pointer-events-none"></div>
    <div class="max-w-7xl mx-auto relative z-10 w-full">
        <div class="page-hero-eyebrow flex items-center gap-3 mb-6">
            <span class="h-px w-8 bg-white/30"></span>
            <span class="text-xs font-bold text-zinc-400 uppercase tracking-widest">{eyebrow}</span>
        </div>
        <h1 class="page-hero-title text-6xl md:text-8xl font-bold text-white mb-8 tracking-tighter max-w-5xl leading-[0.9]">
            {title}
        </h1>
        <p class="page-hero-description text-xl text-zinc-400 max-w-2xl leading-relaxed border-l border-white/10 pl-6">
            {description}
        </p>
    </div>
</div>

<style>
  .page-hero-eyebrow {
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 0.5s ease-out forwards;
  }

  .page-hero-title {
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 0.5s ease-out 0.1s forwards;
  }

  .page-hero-description {
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 0.5s ease-out 0.2s forwards;
  }

  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
