---
/**
 * Component Demo Page
 * Demonstrates StandardButton and SpotlightCard usage in Astro
 */
import { StandardButton } from '@/components/ui/StandardButton';
import { SpotlightCard } from '@/components/ui/SpotlightCard';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="UI Component demonstration page" />
    <title>Component Demo - StandardButton & SpotlightCard</title>
  </head>
  <body class="bg-black min-h-screen">
    <main class="container mx-auto px-4 py-16 max-w-7xl">

      <!-- Header -->
      <header class="mb-16 text-center">
        <h1 class="text-5xl font-bold text-white mb-4">
          UI Components Demo
        </h1>
        <p class="text-xl text-zinc-400">
          Interactive examples of StandardButton and SpotlightCard
        </p>
      </header>

      <!-- StandardButton Examples -->
      <section class="mb-20">
        <h2 class="text-3xl font-bold text-white mb-8">StandardButton Variants</h2>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
          <div class="space-y-4">
            <h3 class="text-lg font-semibold text-zinc-300">Primary</h3>
            <StandardButton
              client:load
              variant="primary"
              aria-label="Primary action button"
            >
              Get Started
            </StandardButton>
          </div>

          <div class="space-y-4">
            <h3 class="text-lg font-semibold text-zinc-300">Secondary</h3>
            <StandardButton
              client:load
              variant="secondary"
              aria-label="Secondary action button"
            >
              Learn More
            </StandardButton>
          </div>

          <div class="space-y-4">
            <h3 class="text-lg font-semibold text-zinc-300">Outline</h3>
            <StandardButton
              client:load
              variant="outline"
              aria-label="Outlined action button"
            >
              View Docs
            </StandardButton>
          </div>
        </div>

        <!-- Disabled State -->
        <div class="space-y-4">
          <h3 class="text-lg font-semibold text-zinc-300">Disabled State</h3>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <StandardButton client:load variant="primary" disabled>
              Disabled Primary
            </StandardButton>
            <StandardButton client:load variant="secondary" disabled>
              Disabled Secondary
            </StandardButton>
            <StandardButton client:load variant="outline" disabled>
              Disabled Outline
            </StandardButton>
          </div>
        </div>
      </section>

      <!-- SpotlightCard Examples -->
      <section class="mb-20">
        <h2 class="text-3xl font-bold text-white mb-8">SpotlightCard Effects</h2>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <!-- Default Spotlight -->
          <SpotlightCard
            client:visible
            aria-label="Default spotlight card"
          >
            <div class="p-6 h-full">
              <h3 class="text-xl font-bold text-white mb-3">Default White</h3>
              <p class="text-zinc-400 mb-4">
                Subtle white spotlight effect on hover. Perfect for minimalist designs.
              </p>
              <p class="text-xs text-zinc-500 font-mono">
                rgba(255,255,255,0.03)
              </p>
            </div>
          </SpotlightCard>

          <!-- Blue Spotlight -->
          <SpotlightCard
            client:visible
            spotlightColor="rgba(59,130,246,0.08)"
            aria-label="Blue spotlight card"
          >
            <div class="p-6 h-full">
              <h3 class="text-xl font-bold text-white mb-3">Blue Accent</h3>
              <p class="text-zinc-400 mb-4">
                Blue-tinted spotlight for brand-focused elements.
              </p>
              <p class="text-xs text-zinc-500 font-mono">
                rgba(59,130,246,0.08)
              </p>
            </div>
          </SpotlightCard>

          <!-- Purple Spotlight -->
          <SpotlightCard
            client:visible
            spotlightColor="rgba(168,85,247,0.06)"
            aria-label="Purple spotlight card"
          >
            <div class="p-6 h-full">
              <h3 class="text-xl font-bold text-white mb-3">Purple Glow</h3>
              <p class="text-zinc-400 mb-4">
                Purple spotlight for premium features.
              </p>
              <p class="text-xs text-zinc-500 font-mono">
                rgba(168,85,247,0.06)
              </p>
            </div>
          </SpotlightCard>

          <!-- Green Spotlight -->
          <SpotlightCard
            client:visible
            spotlightColor="rgba(34,197,94,0.05)"
            aria-label="Green spotlight card"
          >
            <div class="p-6 h-full">
              <h3 class="text-xl font-bold text-white mb-3">Green Success</h3>
              <p class="text-zinc-400 mb-4">
                Green spotlight for positive messaging.
              </p>
              <p class="text-xs text-zinc-500 font-mono">
                rgba(34,197,94,0.05)
              </p>
            </div>
          </SpotlightCard>

          <!-- Cyan Spotlight -->
          <SpotlightCard
            client:visible
            spotlightColor="rgba(6,182,212,0.08)"
            aria-label="Cyan spotlight card"
          >
            <div class="p-6 h-full">
              <h3 class="text-xl font-bold text-white mb-3">Cyan Tech</h3>
              <p class="text-zinc-400 mb-4">
                Cyan spotlight for tech-focused content.
              </p>
              <p class="text-xs text-zinc-500 font-mono">
                rgba(6,182,212,0.08)
              </p>
            </div>
          </SpotlightCard>

          <!-- Orange Spotlight -->
          <SpotlightCard
            client:visible
            spotlightColor="rgba(249,115,22,0.05)"
            aria-label="Orange spotlight card"
          >
            <div class="p-6 h-full">
              <h3 class="text-xl font-bold text-white mb-3">Orange Energy</h3>
              <p class="text-zinc-400 mb-4">
                Orange spotlight for energetic sections.
              </p>
              <p class="text-xs text-zinc-500 font-mono">
                rgba(249,115,22,0.05)
              </p>
            </div>
          </SpotlightCard>
        </div>
      </section>

      <!-- Combined Example -->
      <section class="mb-20">
        <h2 class="text-3xl font-bold text-white mb-8">Combined Example</h2>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
          <!-- Call to Action Card -->
          <SpotlightCard
            client:visible
            spotlightColor="rgba(59,130,246,0.1)"
            aria-label="Get started call to action"
            role="region"
          >
            <div class="p-8 h-full flex flex-col">
              <h3 class="text-2xl font-bold text-white mb-3">
                Get Started Today
              </h3>
              <p class="text-zinc-300 mb-6 flex-1">
                Experience the power of our platform with a 14-day free trial.
                No credit card required, cancel anytime.
              </p>
              <div class="space-y-3">
                <StandardButton
                  client:load
                  variant="primary"
                  aria-label="Start your free trial"
                >
                  Start Free Trial
                </StandardButton>
                <StandardButton
                  client:load
                  variant="outline"
                  aria-label="Schedule a demo"
                >
                  Schedule Demo
                </StandardButton>
              </div>
            </div>
          </SpotlightCard>

          <!-- Feature Highlight Card -->
          <SpotlightCard
            client:visible
            spotlightColor="rgba(168,85,247,0.08)"
            aria-label="Premium features overview"
            role="region"
          >
            <div class="p-8 h-full flex flex-col">
              <h3 class="text-2xl font-bold text-white mb-3">
                Premium Features
              </h3>
              <ul class="text-zinc-300 space-y-3 mb-6 flex-1">
                <li class="flex items-start">
                  <span class="text-purple-400 mr-2">✓</span>
                  Advanced analytics and reporting
                </li>
                <li class="flex items-start">
                  <span class="text-purple-400 mr-2">✓</span>
                  Priority customer support
                </li>
                <li class="flex items-start">
                  <span class="text-purple-400 mr-2">✓</span>
                  Custom integrations
                </li>
                <li class="flex items-start">
                  <span class="text-purple-400 mr-2">✓</span>
                  Unlimited team members
                </li>
              </ul>
              <StandardButton
                client:load
                variant="secondary"
                aria-label="View pricing plans"
              >
                View Pricing
              </StandardButton>
            </div>
          </SpotlightCard>
        </div>
      </section>

      <!-- Usage Instructions -->
      <section class="mb-20">
        <h2 class="text-3xl font-bold text-white mb-8">Usage Instructions</h2>

        <SpotlightCard client:visible className="max-w-4xl mx-auto">
          <div class="p-8">
            <h3 class="text-xl font-bold text-white mb-4">Quick Start</h3>

            <div class="space-y-4 text-zinc-300">
              <div>
                <h4 class="font-semibold text-white mb-2">1. Import Components</h4>
                <pre class="bg-zinc-950 p-4 rounded-lg overflow-x-auto text-sm"><code>import &#123; StandardButton &#125; from '@/components/ui/StandardButton';
import &#123; SpotlightCard &#125; from '@/components/ui/SpotlightCard';</code></pre>
              </div>

              <div>
                <h4 class="font-semibold text-white mb-2">2. Use with Client Directives</h4>
                <pre class="bg-zinc-950 p-4 rounded-lg overflow-x-auto text-sm"><code>&lt;StandardButton client:load variant="primary"&gt;
  Click Me
&lt;/StandardButton&gt;

&lt;SpotlightCard client:visible&gt;
  &lt;div class="p-6"&gt;Content&lt;/div&gt;
&lt;/SpotlightCard&gt;</code></pre>
              </div>

              <div>
                <h4 class="font-semibold text-white mb-2">3. Customize as Needed</h4>
                <p class="text-zinc-400">
                  Both components accept className props for custom styling and
                  support full TypeScript type checking for better developer experience.
                </p>
              </div>
            </div>

            <div class="mt-6">
              <StandardButton
                client:load
                variant="outline"
                aria-label="View full documentation"
              >
                View Full Documentation
              </StandardButton>
            </div>
          </div>
        </SpotlightCard>
      </section>

    </main>

    <!-- Footer -->
    <footer class="border-t border-white/5 py-8">
      <div class="container mx-auto px-4 max-w-7xl">
        <p class="text-center text-zinc-500 text-sm">
          Built with Astro, React, Framer Motion, and Tailwind CSS
        </p>
      </div>
    </footer>

  </body>
</html>
