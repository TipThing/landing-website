---
/**
 * 404 Error Page - Page Not Found
 *
 * SEO Strategy:
 * - noindex to prevent indexing of error pages
 * - Clear navigation to help users find their way
 * - Friendly, helpful messaging
 */

import BaseLayout from '../layouts/BaseLayout.astro';

const pageTitle = '404 - Page Not Found | Tipthing';
const pageDescription = 'The page you are looking for could not be found. Return to the homepage or browse our site.';
---

<BaseLayout
  title={pageTitle}
  description={pageDescription}
  pageType="website"
  currentPath="/404"
>
  <Fragment slot="head">
    <!-- Prevent indexing of error pages -->
    <meta name="robots" content="noindex, nofollow" />
  </Fragment>

  <!-- 404 Content -->
  <section
    class="relative min-h-screen flex items-center justify-center px-6 py-32"
    aria-labelledby="error-heading"
  >
    <div class="absolute inset-0 bg-gradient-to-b from-zinc-900 via-[#09090b] to-[#09090b]" aria-hidden="true"></div>

    <div class="relative z-10 max-w-4xl mx-auto text-center">
      <!-- 404 Number -->
      <div class="mb-8" aria-hidden="true">
        <span class="text-[12rem] md:text-[16rem] font-bold bg-gradient-to-r from-blue-400 to-purple-400 bg-clip-text text-transparent leading-none">
          404
        </span>
      </div>

      <!-- Error Message -->
      <h1
        id="error-heading"
        class="text-4xl md:text-6xl font-bold text-white mb-6"
      >
        Page Not Found
      </h1>

      <p class="text-xl text-zinc-400 mb-12 max-w-2xl mx-auto leading-relaxed">
        Oops! The page you're looking for seems to have wandered off.
        Let's get you back on track.
      </p>

      <!-- Navigation Options -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-16">
        <a
          href="/"
          class="px-8 py-4 bg-white text-black rounded-lg font-semibold text-lg hover:bg-zinc-200 transition-all transform hover:scale-105 focus:outline-none focus:ring-4 focus:ring-white/30 focus:ring-offset-4 focus:ring-offset-zinc-950"
          aria-label="Go to homepage"
        >
          Go Home
        </a>
        <a
          href="/contact"
          class="px-8 py-4 bg-white/10 text-white rounded-lg font-semibold text-lg border border-white/20 hover:bg-white/20 transition-all focus:outline-none focus:ring-4 focus:ring-white/30 focus:ring-offset-4 focus:ring-offset-zinc-950"
          aria-label="Contact support"
        >
          Contact Support
        </a>
      </div>

      <!-- Quick Links -->
      <div class="border-t border-white/10 pt-12">
        <h2 class="text-sm uppercase tracking-wider text-zinc-500 mb-6">Quick Links</h2>
        <nav aria-label="Quick navigation links">
          <div class="flex flex-wrap justify-center gap-6 text-sm">
            <a
              href="/"
              class="text-zinc-400 hover:text-white transition-colors focus:outline-none focus:text-white focus:underline underline-offset-4"
            >
              Home
            </a>
            <a
              href="/about"
              class="text-zinc-400 hover:text-white transition-colors focus:outline-none focus:text-white focus:underline underline-offset-4"
            >
              About
            </a>
            <a
              href="/contact"
              class="text-zinc-400 hover:text-white transition-colors focus:outline-none focus:text-white focus:underline underline-offset-4"
            >
              Contact
            </a>
          </div>
        </nav>
      </div>

      <!-- Helpful Information -->
      <div class="mt-16 p-6 bg-zinc-900/50 border border-zinc-800 rounded-lg max-w-2xl mx-auto">
        <h2 class="text-lg font-bold text-white mb-3">Common Issues</h2>
        <ul class="text-left text-zinc-400 space-y-2 text-sm">
          <li class="flex items-start gap-2">
            <svg class="w-5 h-5 text-blue-400 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            <span>Check the URL for typos or errors</span>
          </li>
          <li class="flex items-start gap-2">
            <svg class="w-5 h-5 text-blue-400 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            <span>The page may have been moved or deleted</span>
          </li>
          <li class="flex items-start gap-2">
            <svg class="w-5 h-5 text-blue-400 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            <span>Try using the search feature or navigation menu</span>
          </li>
        </ul>
      </div>

      <!-- Animated decoration -->
      <div class="mt-16 flex justify-center gap-2" aria-hidden="true">
        <div class="w-2 h-2 bg-blue-400 rounded-full animate-bounce" style="animation-delay: 0ms;"></div>
        <div class="w-2 h-2 bg-purple-400 rounded-full animate-bounce" style="animation-delay: 150ms;"></div>
        <div class="w-2 h-2 bg-pink-400 rounded-full animate-bounce" style="animation-delay: 300ms;"></div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* Smooth transitions */
  a {
    transition: all 0.2s ease-in-out;
  }

  /* Focus states */
  a:focus-visible {
    outline: 2px solid rgba(255, 255, 255, 0.5);
    outline-offset: 4px;
  }

  /* Staggered bounce animation */
  @keyframes bounce {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-10px);
    }
  }

  .animate-bounce {
    animation: bounce 1s infinite;
  }

  /* Optimize for reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .animate-bounce {
      animation: none;
    }
    * {
      transition-duration: 0.01ms !important;
    }
  }
</style>
