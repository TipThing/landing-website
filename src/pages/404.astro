---
import BaseLayout from '../layouts/BaseLayout.astro';
import StandardButton from '../components/ui/StandardButton.astro';
import NotFoundVisual from '../components/interactive/NotFoundVisual';
import { ArrowLeft } from 'lucide-react';

const pageTitle = '404 - Page Not Found | Tipthing';
const pageDescription = 'The page you are looking for could not be found.';
---

<BaseLayout
  title={pageTitle}
  description={pageDescription}
  pageType="website"
  currentPath="/404"
>
  <Fragment slot="head">
    <meta name="robots" content="noindex, nofollow" />
  </Fragment>

  <div class="min-h-screen flex flex-col items-center justify-center px-6 bg-[#09090b] relative overflow-hidden">
    <!-- Grid pattern background -->
    <div
      class="absolute inset-0 bg-[linear-gradient(to_right,#8080800a_1px,transparent_1px),linear-gradient(to_bottom,#8080800a_1px,transparent_1px)] bg-[size:24px_24px] [mask-image:radial-gradient(ellipse_60%_50%_at_50%_50%,#000_20%,transparent_80%)] pointer-events-none"
    ></div>

    <div class="relative z-10 w-full max-w-3xl mx-auto flex flex-col items-center animate-in fade-in duration-700">
      <!-- Desktop: Interactive particle canvas -->
      <div class="hidden md:block w-full aspect-[8/3] mb-4" aria-hidden="true">
        <NotFoundVisual client:load />
      </div>

      <!-- Mobile: Clean static 404 -->
      <div class="md:hidden select-none pointer-events-none mb-2" aria-hidden="true">
        <span class="text-[8rem] font-bold text-zinc-900/80 leading-none tracking-tighter block text-center">
          404
        </span>
      </div>

      <!-- Content -->
      <div class="text-center">
        <!-- Eyebrow -->
        <div class="flex items-center justify-center gap-3 mb-6">
          <span class="h-px w-8 bg-white/20"></span>
          <span class="text-xs font-bold text-zinc-500 uppercase tracking-widest">Page Not Found</span>
          <span class="h-px w-8 bg-white/20"></span>
        </div>

        <!-- Heading -->
        <h1 class="text-3xl md:text-5xl font-bold text-white mb-4 tracking-tighter leading-[0.95]">
          This page doesn't exist.
        </h1>

        <!-- Description -->
        <p class="text-base text-zinc-400 max-w-md mx-auto leading-relaxed mb-10">
          The page you're looking for has been moved, removed, or never existed.
        </p>

        <!-- CTAs -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
          <a href="/" class="w-full sm:w-auto">
            <StandardButton class="w-full sm:w-auto px-8">
              <ArrowLeft size={16} />
              Back to Home
            </StandardButton>
          </a>
          <a href="/contact" class="w-full sm:w-auto">
            <StandardButton variant="outline" class="w-full sm:w-auto px-8">
              Contact Us
            </StandardButton>
          </a>
        </div>

        <!-- Nav links -->
        <div class="mt-14 pt-8 border-t border-white/5">
          <nav class="flex flex-wrap justify-center gap-8 text-sm" aria-label="Quick navigation">
            <a href="/services" class="text-zinc-600 hover:text-white transition-colors">Services</a>
            <a href="/products" class="text-zinc-600 hover:text-white transition-colors">Products</a>
            <a href="/company" class="text-zinc-600 hover:text-white transition-colors">Company</a>
            <a href="/contact" class="text-zinc-600 hover:text-white transition-colors">Contact</a>
          </nav>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  @keyframes fade-in {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-in {
    animation: fade-in 0.7s ease-out;
  }

  .fade-in {
    animation-name: fade-in;
  }

  .duration-700 {
    animation-duration: 0.7s;
  }
</style>
